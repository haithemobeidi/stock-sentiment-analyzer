# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/stock_sentiment

# API Keys (Optional - fallback to free/unauthenticated endpoints)
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
TWITTER_BEARER_TOKEN=
NEWS_API_KEY=

# Multi-Source Sentiment APIs (Recommended for best results)
FINNHUB_API_KEY=              # Get free key: https://finnhub.io/register (60 calls/min)
ALPHA_VANTAGE_API_KEY=        # Get free key: https://www.alphavantage.co/support/#api-key (25 calls/day)

# Cache Configuration
CACHE_TTL_PRICES=900        # 15 minutes for price data
CACHE_TTL_SENTIMENT=900     # 15 minutes for sentiment data
CACHE_TTL_MENTIONS=300      # 5 minutes for mention counts

# Rate Limiting
REDDIT_RATE_LIMIT=60        # Requests per minute
YAHOO_RATE_LIMIT=25         # Requests per day (free tier)
